<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:gravity="center|top"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/ValetTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/theme_bar" 
        android:textSize="22dp"
        android:text="User Check"
        android:textStyle="bold|italic"/>
    
    <View 
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/theme_bar"
        android:layout_marginTop="10dp"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    
    <EditText
        android:id="@+id/edtCheckUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/login_username" 
        android:layout_margin="10dp"
        android:gravity="center"
        android:ellipsize="start"
        android:singleLine="true"
        android:background="@drawable/edittext_rounded_corners">
        <requestFocus />
    </EditText>
    
    <Button
        android:id="@+id/btnCheck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/theme_button"
        android:text="@string/register_check_account"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/validationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:textColor="#ff0000" />
</LinearLayout>
</LinearLayout>
